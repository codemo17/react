{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "no-console": 1,
    "indent": [2, 2],
    "comma-dangle": [2, { "objects": "always-multiline",
    "arrays" : "always-multiline" }]
  }
}

